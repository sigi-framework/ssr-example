{
  "name": "sigi-ssr-example",
  "version": "1.0.0",
  "description": "Example project for sigi framework server side rendering",
  "repository": "git@github.com:sigi-framework/ssr-example.git",
  "author": "LongYinan <lynweklm@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:client": "NODE_ENV=production webpack",
    "client": "webpack",
    "server": "yarn client && webpack --config webpack.ssr.js && node dist/server/main.js"
  },
  "devDependencies": {
    "@sigi/ts-plugin": "^2.11.3",
    "@types/happypack": "^5.0.0",
    "@types/node": "^14.14.25",
    "@types/react-dom": "^17.0.0",
    "@types/webpack": "^4.41.26",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.1",
    "clean-webpack-plugin": "^3.0.0",
    "emotion-ts-plugin": "^1.1.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "happypack": "^5.0.1",
    "html-webpack-plugin": "^5.0.0",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "source-map-loader": "^2.0.0",
    "ts-import-plugin": "^1.6.7",
    "ts-loader": "^8.0.15",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.40.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@abraham/reflection": "^0.7.0",
    "@sigi/core": "^2.4.0",
    "@sigi/devtool": "^2.5.1",
    "@sigi/di": "^2.3.1",
    "@sigi/react": "^2.7.0",
    "@sigi/ssr": "^2.7.0",
    "antd": "^4.12.2",
    "immer": "^8.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rxjs": "^6.6.3",
    "tslib": "^2.1.0"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "prettier --write",
      "eslint -c .eslintrc.yml --fix"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
