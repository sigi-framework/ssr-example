{
  "name": "sigi-ssr-example",
  "version": "1.0.0",
  "description": "Example project for sigi framework server side rendering",
  "repository": "git@github.com:sigi-framework/ssr-example.git",
  "author": "LongYinan <lynweklm@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:client": "NODE_ENV=production webpack --mode production",
    "client": "webpack",
    "server": "yarn client && webpack --config webpack.ssr.js && node dist/server/main.js"
  },
  "devDependencies": {
    "@sigi/ts-plugin": "^2.0.0",
    "@types/happypack": "^5.0.0",
    "@types/node": "^14.0.9",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.17",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "emotion-ts-plugin": "^0.7.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-sonarjs": "^0.5.0",
    "happypack": "^5.0.1",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "source-map-loader": "^1.0.0",
    "ts-import-plugin": "^1.6.6",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@abraham/reflection": "^0.7.0",
    "@sigi/core": "^2.0.2",
    "@sigi/devtool": "^2.0.2",
    "@sigi/di": "^2.0.0",
    "@sigi/react": "^2.0.2",
    "@sigi/ssr": "^2.0.2",
    "antd": "^4.3.0",
    "immer": "^6.0.9",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rxjs": "^6.5.5",
    "tslib": "^2.0.0"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "prettier --write",
      "eslint -c .eslintrc.yml --fix"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
