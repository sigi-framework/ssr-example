{
  "name": "sigi-ssr-example",
  "version": "1.0.0",
  "description": "Example project for sigi framework server side rendering",
  "repository": "git@github.com:sigi-framework/ssr-example.git",
  "author": "LongYinan <lynweklm@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:client": "NODE_ENV=production webpack --mode production",
    "client": "webpack",
    "server": "yarn client && webpack --config webpack.ssr.js && node dist/server/main.js"
  },
  "devDependencies": {
    "@sigi/ts-plugin": "^1.0.0",
    "@types/happypack": "^5.0.0",
    "@types/node": "^13.7.6",
    "@types/react-dom": "^16.9.5",
    "@types/webpack": "^4.41.7",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "emotion-ts-plugin": "^0.5.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "happypack": "^5.0.1",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "ts-import-plugin": "^1.6.5",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2",
    "webpack": "^4.41.6",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@abraham/reflection": "^0.7.0",
    "@sigi/core": "^1.0.0-beta.1",
    "@sigi/devtool": "^1.0.1",
    "@sigi/di": "^1.0.0-beta.1",
    "@sigi/react": "^1.0.1",
    "@sigi/ssr": "^1.0.1",
    "antd": "^4.0.0",
    "immer": "^5.3.6",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "rxjs": "^6.5.4",
    "tslib": "^1.11.1"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "prettier --write",
      "eslint -c .eslintrc.yml --fix"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
